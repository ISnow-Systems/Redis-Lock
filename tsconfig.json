{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ESNext"
		],
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationDir": "./types",
		/* Linting */
		"strict": true
	},
	"include": [
		"src"
	]
}
